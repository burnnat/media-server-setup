[Unit]
Description=Home Assistant
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=3
ExecStart=/usr/bin/docker run --name=home-assistant -v /home/%i/.ssh:/root/.ssh:ro -v /home/%i/.ssh:/home/%i/.ssh:ro -v /home/%i/config:/config -v /etc/localtime:/etc/localtime:ro -v /etc/letsencrypt:/etc/letsencrypt:ro -v /storage/blue:/storage/blue:ro -v /storage/green:/storage/green:ro --net=host burnnat/home-assistant
ExecStop=/usr/bin/docker stop -t 2 home-assistant
ExecStopPost=/usr/bin/docker rm -f home-assistant

[Install]
WantedBy=multi-user.target
